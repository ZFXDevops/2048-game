pipeline {
    agent any

    environment {
        IMAGE = "zavifx/2048-custom-image"
        TAG = "latest"
    }

    stages {
        stage('Validate Files') {
            steps {
                dir("${env.WORKSPACE}/2048-game") {
                    sh 'echo "Current directory: $(pwd)"'
                    sh 'ls -R'
                }
            }
        }

        stage('Build Image & Generate Digest') {
            steps {
                dir("${env.WORKSPACE}/2048-game") {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh 'chmod +x scripts/generate_digest.sh'
                        sh './scripts/generate_digest.sh'
                    }
                }
            }
        }

        stage('Verify Image Digest') {
            steps {
                dir("${env.WORKSPACE}/2048-game") {
                    sh 'chmod +x scripts/verify_digest.sh'
                    sh './scripts/verify_digest.sh'
                }
            }
        }

        stage('Deploy Container') {
            steps {
                dir("${env.WORKSPACE}/2048-game") {
                    sh 'docker rm -f game2048 || true'
                    sh 'docker run -d -p 8080:80 --name game2048 "$IMAGE:$TAG"'
                }
            }
        }
    }

    post {
        failure {
            echo '❌ Deployment failed due to checksum verification or another issue.'
        }
        success {
            echo '✅ Game 2048 deployed successfully.'
        }
    }
}
